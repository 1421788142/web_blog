{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
			"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"skipLibCheck": true,
		"allowJs": false,
			"esModuleInterop": false,
			"allowSyntheticDefaultImports": true,
	
		/* Bundler mode */
		"moduleResolution": "Node",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
			"jsx": "react-jsx",
	
		/* Linting */
		"strict": true,
		// 解析非相对模块名的基准目录
		"baseUrl": "./",
		// 模块名到基于 baseUrl的路径映射的列表。
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"],
			"@img/*": ["./src/assets/image/*"],
			"@com/*": ["./src/components/*"],
			"@api/*": ["./src/apis/*"],
			"@s/*": ["./src/styles/*"],
			"@u/*": ["./src/utils/*"],
			"@v/*": ["./src/views/*"],
			"@types/*": ["./src/types/*"],
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "vite.config.ts","vitePlugins/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.js"]
}
